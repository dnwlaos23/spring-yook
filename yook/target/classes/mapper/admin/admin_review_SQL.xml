	<!-- 리뷰등록(손님) -->
	<insert id="insertReview" parameterType="hashmap">
		   <![CDATA[
				INSERT INTO REVIEW (
                    RE_NUM,
                    MEM_NUM,
                    GOODS_NUM,
					RE_TITLE, 
					RE_CONTENT
				) VALUES (
					RE_NUM_SEQ.NEXTVAL,
					#{MEM_NUM},
					#{GOODS_NUM},
					#{RE_TITLE},
                    #{RE_CONTENT}
                    )
				]]>
	</insert>	
	
	<select id="updateForm" parameterType="hashmap" resultType="hashmap">
   		<![CDATA[
   			SELECT 
   				RE_TITLE,
   				RE_CONTENT,
   				RE_DATE
   			FROM
   				REVIEW
   			WHERE
   				RE_NUM = #{RE_NUM}
   		]]>
   </select>
   
	<!-- 리뷰 수정(손님) -->
	<select id="updateReview" parameterType="hashmap">
      <![CDATA[
         UPDATE REVIEW
         SET
            RE_TITLE = #{RE_TITLE},
            RE_CONTENT = #{RE_CONTENT}
         WHERE
            MEM_NUM = #{MEM_NUM}
      ]]>
	</select>

	

	<!-- 리뷰 삭제 -->
	<delete id="deleteReview" parameterType="hashmap">
<![CDATA[
   DELETE  REVIEW
   WHERE   MEM_NUM = #{MEM_NUM}
]]>
	</delete>

